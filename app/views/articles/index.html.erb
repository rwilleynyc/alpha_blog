<div id="page-content">
  <h1 class="text-center mt-4">Articles</h1>
  
  <div class="container">
    
    <div class="row justify-content-md-center mt-4">
      <div class="col-8">
        <p><%= link_to 'Create New Article', new_article_path() %></p>
        <% @articles.each do |article| %>
          <div class="shadow-sm mb-4 bg-white rounded">
            <h5 class="card-header font-italic font-weight-light text-muted">by Raymond Willey</h5>
            <div class="card-body">
              <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success" %></h5>
              <p class="card-text"><%= truncate(article.description, length: 100) %></p>
              <%= link_to "View", article_path(article), :class => "btn btn-outline-success" %>
              <%= link_to "Edit", edit_article_path(article), :class => "btn btn-outline-primary" %>
              <%= link_to 'Delete', article_path(article), method: :delete, :class => "btn btn-outline-danger", 
              data: { confirm: "Are you sure you want to delete?" } %>
            </div>
            <div class="card-footer text-muted">
              <small>Created <%= time_ago_in_words(article.created_at) %> ago, 
              edited <%= time_ago_in_words(article.updated_at) %> ago</small>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>